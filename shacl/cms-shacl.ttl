@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix footlight: <http://kg.footlight.io/> .


####################################################
# Footlight CMS Events SHACL v1
####################################################

footlight:EventNode
  a sh:NodeShape ;
  sh:targetClass schema:Event ;
  sh:property footlight:Event-name,
              footlight:Event-startDate,
              footlight:Event-endDate,
              footlight:Event-location, 
              footlight:Event-url ;
.

footlight:Event-name
    sh:path schema:name ;
    sh:uniqueLang true ;
    sh:minCount 1 ;
.

footlight:Event-startDate
    sh:path schema:startDate ;
    sh:or (
        [ sh:datatype xsd:dateTime ; ]
        [ sh:datatype xsd:date ; ]
    ) ;
    sh:maxCount 1 ;
    sh:minCount 1 ;
.

footlight:Event-endDate
    sh:path schema:endDate ;
    sh:or (
        [ sh:datatype xsd:dateTime ; ]
        [ sh:datatype xsd:date ; ]
    ) ;
    sh:maxCount 1 ;
    sh:minCount 0 ;
.

footlight:Event-eventStatus
    sh:path schema:eventStatus ;
    sh:minCount 1 ;
    sh:in  (    schema:EventCancelled
                schema:EventPostponed 
                schema:EventScheduled  
                schema:EventRescheduled  
                schema:EventMovedOnline ) .

footlight:Event-location
    sh:path schema:location ;
    sh:minCount 1  ;
    sh:node footlight:PlaceNode ; 
.

footlight:Event-url
    sh:path schema:url ;
    sh:nodeKind sh:IRI ;
    sh:minCount 0 ;
    sh:pattern "^http" ;
    sh:not (
        [sh:pattern "http://schema.org" ;]
    ) .

################
# Place 
################
footlight:PlaceNode
    sh:targetClass schema:Place ;
    sh:property footlight:Place-name ;
.

footlight:Place-name
    sh:path schema:name ;
    sh:uniqueLang true ;
    sh:minCount 1 ;
.

